<Window x:Class="_18.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_18"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <DataGrid x:Name="DG" Height="300"/>
            <WrapPanel>
                <Button Content="Изменить" x:Name="Edit" Click="Edit_Click"/>
                <Button Content="Удалить" x:Name="Delete" Click="Delete_Click"/>
                <Button Content="Добавить" x:Name="Add" Click="Add_Click"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
